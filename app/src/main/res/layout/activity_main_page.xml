<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Linux远程配置管理系统"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp"/>

        <View  android:layout_height="8px"
            android:layout_width="match_parent"
            android:background="#66CCFF"
            />

        <Button
            android:id="@+id/command_btn"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="命令行及文件管理"
            />
        <Button
            android:id="@+id/boot_btn"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="电源管理"
            />
        <Button
            android:id="@+id/user_btn"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="用户管理"
            />
        <Button
            android:id="@+id/run_btn"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="运行状态"
            />
        <Button
            android:id="@+id/log_btn"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="日志管理"
            />
        <Button
            android:id="@+id/firewall_btn"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="防火墙管理"
            />
        <Button
            android:id="@+id/selinux_btn"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="SELinux管理"
            />
        <Button
            android:id="@+id/mysql_btn"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="mysql管理"
            />
        <Button
            android:id="@+id/apache_btn"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Apache管理"
            />

    </LinearLayout>
</ScrollView>